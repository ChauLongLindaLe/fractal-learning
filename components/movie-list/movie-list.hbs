<!-- Start: component HTML -->
<div id="movie-list" class="movie-list">
    <table cellspacing="0" class="movie-list__table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            <tr 
                v-for="(movie, index) in movies"
                v-bind:key="index">
                <td>\{{ movie.name }}</td>
                <td>\{{ movie.genre }}</td>
                <td>\{{ movie.rating }}</td>
            </tr>
        </tbody>
    </table>
</div>
<!-- End: component HTML -->

